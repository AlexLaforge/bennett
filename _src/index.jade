						li.contact
							a.contact-link(href="https://codepen.io/bennettfeely") <strong>CodePen</strong> /bennettfeely
						li.contact
							a.contact-link(href="https://www.linkedin.com/in/bennettfeely/") <strong>LinkedIn</strong> /bennettfeely
						li.contact
